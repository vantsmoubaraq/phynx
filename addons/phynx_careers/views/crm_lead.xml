<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Inherit hr.applicant form view to add Education tab -->
    <record id="view_crm_lead_inherit" model="ir.ui.view">
        <field name="name">crm.lead.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
           
            <xpath expr="//div[@class='o_row o_row_readonly']/field[@name='phone']" position="after">
                <group>
                    <field name="email" widget="email"/>
                </group>
            </xpath>
            <header position="inside">
                <button name="action_create_client"
                        type="object"
                        string="Create Client"
                        class="btn-primary"
                        icon="fa-print"/>
            </header>
            <field name="email_from" position="replace">
                <field name="email_from" invisible="1"/>
            </field>
            <field name="partner_id" position="replace">
                <field name="partner_id" invisible="1"/>
            </field>
            
           
        </field>
    </record>

</odoo>
